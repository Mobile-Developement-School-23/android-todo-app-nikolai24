<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppBackground"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/HeaderTextStyle"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/theme_selection"/>

    <RadioGroup
        style="@style/RadioGroupStyle"
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            style="@style/RadioButtonStyle"
            android:id="@+id/radioLightTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/light_theme_selection"/>

        <RadioButton
            style="@style/RadioButtonStyle"
            android:id="@+id/radioDarkTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dark_theme_selection"/>

        <RadioButton
            style="@style/RadioButtonStyle"
            android:id="@+id/radioSystemTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/system_theme_selection" />
    </RadioGroup>

</LinearLayout>
