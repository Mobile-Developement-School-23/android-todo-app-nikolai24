<resources>
    <style name="AppBackground">
        <item name="android:background">@color/black</item>
    </style>
    <style name="HeaderTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/start_15</item>
        <item name="android:layout_marginTop">@dimen/top_22</item>
        <item name="android:textSize">@dimen/size_18</item>
    </style>
    <style name="TextColor">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="DateTextColor">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="LineStyle">
        <item name="android:background">@color/dark_grey</item>
        <item name="android:layout_marginStart">@dimen/start_15</item>
        <item name="android:layout_marginEnd">@dimen/end_15</item>
        <item name="android:layout_marginTop">@dimen/top_22</item>
        <item name="android:layout_height">@dimen/height_1</item>
    </style>
    <style name="DeleteButton">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/vivid_red</item>
        <item name="android:textSize">@dimen/size_18</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/start_15</item>
        <item name="android:layout_marginTop">@dimen/top_40</item>
    </style>
    <style name="DescriptionStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_18</item>
        <item name="android:layout_marginStart">@dimen/start_15</item>
        <item name="android:layout_marginEnd">@dimen/end_15</item>
        <item name="android:layout_marginTop">@dimen/top_10</item>
        <item name="android:paddingBottom">@dimen/padding_10</item>
    </style>
</resources>
